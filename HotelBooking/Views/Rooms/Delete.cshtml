@model HotelBooking.DTO.RoomDto

@{
    Layout = "_Layout";
    ViewData["Title"] = "Delete Room";
}

<h2>Delete Room</h2>

<h4>Room</h4>
<hr />
<div>
    <h4>Are you sure you want to delete this?</h4>
    <div>
        <h4>Room</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                RoomType
            </dt>
            <dd class="col-sm-10">
                @Model.RoomType
            </dd>
            <dt class="col-sm-2">
                RoomNumber
            </dt>
            <dd class="col-sm-10">
                @Model.RoomNumber
            </dd>
            <dt class="col-sm-2">
                Status
            </dt>
            <dd class="col-sm-10">
                @Model.Status
            </dd>
            <dt class="col-sm-2">
                PricePerNight
            </dt>
            <dd class="col-sm-10">
                @Model.PricePerNight
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="RoomID" />
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a asp-controller="Rooms" asp-action="Index" class="btn btn-secondary">Back to List</a>
        </form>
    </div>
</div>
